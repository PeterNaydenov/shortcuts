{
  "name": "@peter.naydenov/shortcuts",
  "description": "Context control of shortcuts based on keyboard and mouse events",
  "version": "3.5.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/shortcuts.umd.js",
  "types": "./dist/main.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/shortcuts.esm.mjs",
      "require": "./dist/shortcuts.cjs",
      "default": "./dist/shortcuts.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c && npm run types",
    "test": "vitest",
    "test:ui": "vitest --ui --open",
    "cover": "vitest run --coverage",
    "types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/shortcuts"
  },
  "dependencies": {
    "@peter.naydenov/notice": "^2.4.1"
  },
  "devDependencies": {
    "@peter.naydenov/visual-controller-for-react": "^3.0.1",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "ask-for-promise": "^3.0.2",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "playwright": "^1.56.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "shortcut",
    "key",
    "keyboard",
    "mouse",
    "click"
  ]
}
